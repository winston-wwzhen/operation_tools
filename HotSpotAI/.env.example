# HotSpotAI 环境配置文件
# 复制此文件为 .env 并填写实际配置

# ============ LLM 配置 ============
LLM_API_KEY=your_api_key_here
LLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4/
LLM_MODEL=glm-4.7
LLM_TIMEOUT=1200

# ============ JWT 配置 ============
JWT_SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# ============ 管理员账户配置 ============
# 用于创建管理员账户（运行 scripts/create_admin.py 时使用）
ADMIN_USERNAME=admin
ADMIN_PASSWORD=aaaaaa
ADMIN_EMAIL=admin@hotspotai.local

# ============ 数据库配置 ============
DATABASE_URL=sqlite:///./data.db
DB_KEEP_DAYS=7

# ============ 爬虫配置 ============
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2
TOPIC_LIMIT=10

# ============ 微信公众号配置 ============
# 微信公众号 AppID（在微信公众平台获取）
WECHAT_APP_ID=
# 微信公众号 Secret（在微信公众平台获取）
WECHAT_SECRET=

# ============ 微信发布高级配置 ============
# AccessToken 缓存时间（秒），默认 6600（提前 5 分钟刷新）
WECHAT_TOKEN_CACHE_TIME=6600
# 发布间隔限制（秒），默认 1800（30 分钟）
WECHAT_PUBLISH_INTERVAL=1800
# 每日最大发布次数，默认 1（订阅号限制）
WECHAT_DAILY_LIMIT=1
# 是否启用内容安全检测
WECHAT_ENABLE_CONTENT_CHECK=true

# ============ 定时任务配置 ============
SCHEDULE_CRON=0 */2 * * *
AUTO_RUN=false

# ============ 分类抓取配置 ============
# 是否启用分类抓取
CATEGORY_SCRAPING_ENABLED=true
# 分类抓取定时任务 Cron 表达式（默认每2小时）
CATEGORY_SCHEDULE_CRON=0 */2 * * *
# 每个分类每个平台抓取数量
CATEGORY_TOPIC_LIMIT=5

# ============ 服务配置 ============
HOST=0.0.0.0
PORT=3000
DEBUG=false

# ============ 日志配置 ============
# 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件最大大小 (字节，默认 10MB)
# LOG_MAX_BYTES=10485760
# 日志文件备份数量
# LOG_BACKUP_COUNT=5
# 是否按时间轮转 (true/false，默认 false)
# LOG_TIME_ROTATION=false

# ============ Playwright 配置 ============
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# ============ CORS 配置 ============
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:8081,http://127.0.0.1:8081,http://localhost:8082,http://127.0.0.1:8082,http://localhost:8083,http://127.0.0.1:8083
